{
    "topologyName": "TP_LotsOfPublishersBenchmark3",
    "topologyType": "SingleDimension",
    "benchmarkType": "throughput",
    "description": "1kb msgs. Confirms (1000) and manual acks (500/1). Scale out publishers",
    "vhosts": [
        {
            "name": "benchmark",
            "scale": 1,
            "queueGroups": [
                {
                    "group": "q1",
                    "scale": 1
                }
            ],
            "publisherGroups": [
                {
                    "group": "p1",
                    "scale": 1,
                    "publishMode": {
                        "useConfirms": true,
                        "inFlightLimit": 1000
                    },
                    "sendToQueueGroup": {
                        "queueGroup": "q1",
                        "mode": "random"
                    },
                    "deliveryMode": "Persistent",
                    "messageSize": 1024
                }
            ],
            "consumerGroups": [
                {
                    "group": "c1",
                    "scale": 1,
                    "queueGroup": "q1",
                    "ackMode": {
                        "manualAcks": true,
                        "consumerPrefetch": 10000,
                        "ackInterval": 1
                    }
                }
            ]
        }
    ],
    "dimensions" : {
        "singleDimension": {
            "dimension": "Publishers",
            "values": [8, 12, 16, 20, 24, 28, 32, 36, 40, 44, 48, 52],
            "stepDurationSeconds": 180,
            "rampUpSeconds": 10
        }
    }
}